      touch A7_INT.usfm
		echo "\id INT"                                   >> A7_INT.usfm
                echo "\periph Uvod v Staro zavezo"               >> A7_INT.usfm
                echo "\mt1 Uvod v Staro zavezo"                  >> A7_INT.usfm
                echo "\p Stara zaveza je zapis......"            >> A7_INT.usfm
                # echo "\periph History Introduction"            >> A7_INT.usfm
