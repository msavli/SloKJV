echo "   --==    Število <note type=\"crossReference\">"
cat /home/pc/Dokumenti/osis2usfm/SloKJV_sword.xml | grep '<note type="crossReference">' |wc -l
echo "   --==    Število <note type=\"study\""
cat /home/pc/Dokumenti/osis2usfm/SloKJV_sword.xml | grep '<note type="study"' |wc -l
