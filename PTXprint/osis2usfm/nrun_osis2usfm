#============== Odstrani UVOD iz naslednjih knjig ========================
      case $format in
           "A5_NZ_BIG")
               echo -E "   --==    Ker je A5_NZ_BIG -> Pobrise uvod - celo vrstico ki se zacne z \iex"
               sed -i '/^\\iex/d'                                   $SloKJV$format/*.usfm
               ;;
           *)  echo -E "   --==    Nic ne naredi. Obicajno Sveto pismo (ni A5_NZ_BIG)... "
               ;;
      esac
