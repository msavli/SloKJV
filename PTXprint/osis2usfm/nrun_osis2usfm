cat /home/pc/Dokumenti/osis2usfm/SloKJV_sword.xml | grep '<reference osisRef=' |wc -l
echo "   --==    Število <\/noteCrossReference>"
cat /home/pc/Dokumenti/osis2usfm/SloKJV_sword.xml | grep '<\/noteCrossReference>' |wc -l
