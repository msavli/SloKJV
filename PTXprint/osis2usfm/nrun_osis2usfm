#!/bin/bash
 
# Set paths
SloKJVepubPath=/home/pc/Dokumenti/epub
osis2usfm=/home/pc/Dokumenti/osis2usfm
SloKJV_Github=/home/pc/Dokumenti/GitHub/SloKJV
SloKJV=/home/pc/Dokumenti/osis2usfm/SloKJV/release/SloKJV_
format=US_Trade

                          #  A4        210 x 297 mm
                          #  A5        148 x 210 mm
                          #  US Trade  152 x 229 mm


echo "   Pritisni tipko za brisanje začasnih PTXprint datotek ..."
# Function to check if a key is pressed
key_pressed_brisanje_temp_files() {
    read -t 2 -n 1 key
    if [ $? -eq 0 ]; then
        echo "   Brisanje datotek ...."
		#======== Pobrise vse  *pdf  in  *.usfm  datoteke =====
		echo  "    Pobrise vse pdf datoteke ..."
		echo  "      Ostaja samo *.USFM v KJV mapi ..."
		cd $osis2usfm
		#find /home/pc/Dokumenti/GitHub/SloKJV/PTXprint/osis2usfm/SloKJV/release . -type f -name "*.pdf"  -exec ls {} +
		find /home/pc/Dokumenti/GitHub/SloKJV/PTXprint/osis2usfm/SloKJV/release  . -type f -name "*.pdf"  -exec rm {} +
		find /home/pc/Dokumenti/GitHub/SloKJV/PTXprint/osis2usfm/SloKJV/release  . -type f -name "*.usfm" -exec ls {} +
		find /home/pc/Dokumenti/GitHub/SloKJV/PTXprint/osis2usfm/SloKJV/release  . -type f -name "*.usfm" -exec rm {} +
		echo  "      Pobrise vse fajle v mapah local ..."
		find /home/pc/Dokumenti/GitHub/SloKJV/PTXprint/osis2usfm/SloKJV/release -type d -name 'local' -exec find '{}' -type f -iname '*' -print -delete ';'
		# find /home/pc/Dokumenti/GitHub/SloKJV/PTXprint/osis2usfm/SloKJV/release -type d -name 'local' -exec find '{}' -type f -iname '*' -print ';'
		#=======================================================
    else
        echo "   Nadaljujem ...."
    fi
}

#= === Vklop in izklop čakanja ===
#key_pressed_brisanje_temp_files
#=================================


#======= zberi velikost PDF verzije SloKJV =============
echo "   Izberi velikost PDF verzije SloKJV"
PS3='Izberi velikost PDF verzije SloKJV: '
options=("A4" "US_Trade" "A5" "A5_NZ_BIG" "A5_NZ_Ps" "A5_NZ_prostor" "SLO-KJV" "Test" "FRTLOCAL_SFM" "PTXPRINT_STY" "Izhod")
select opt in "${options[@]}"
do
    case $opt in
        "A4")
            echo "   Izbral si A4."
            format=A4
            PaperWdthMetr="210"       # milimeters, 210 for ISO A4
            PaperHghtMetr="297"       # milimeters, 297 for ISO A4
            break
            ;;
        "US_Trade")
            echo "   Izbral si US_Trade."
            format=US_Trade
            PaperWdthMetr="152"       # milimeters, US Trade 152 mm
            PaperHghtMetr="229"       # milimeters, US Trade 229 mm
            break
            ;;
        "A5")
            echo "   Izbral si A5."
            format=A5
            PaperWdthMetr="148"       # milimeters, 148 mm for ISO A5
            PaperHghtMetr="210"       # milimeters, 210 mm for ISO A5
            break
            ;;
        "A5_NZ_BIG")
            echo "   Izbral si A5_NZ_BIG."
            format=A5_NZ_BIG
            PaperWdthMetr="148"       # milimeters, 148 mm for ISO A5
            PaperHghtMetr="210"       # milimeters, 210 mm for ISO A5
            break
            ;;
        "A5_NZ_Ps")
            echo "   Izbral si A5_NZ_Ps."
            format=A5_NZ_Ps
            PaperWdthMetr="148"       # milimeters, 148 mm for ISO A5
            PaperHghtMetr="210"       # milimeters, 210 mm for ISO A5
            break
            ;;
        "A5_NZ_prostor")
            echo "   Izbral si A5_NZ_prostor."
            format=A5_NZ_prostor
            PaperWdthMetr="148"       # milimeters, 148 mm for ISO A5
            PaperHghtMetr="210"       # milimeters, 210 mm for ISO A5
            break
            ;;
        "SLO-KJV")
            echo "   Izbral si SLO-KJV."
            format=SLO-KJV
            PaperWdthMetr="210"       # milimeters, 210 for ISO A4
            PaperHghtMetr="297"       # milimeters, 297 for ISO A4
            break
            ;;
        "Test")
            echo "   Izbral si Test."
            format=Test
            PaperWdthMetr="210"       # milimeters, 210 for ISO A4
            PaperHghtMetr="297"       # milimeters, 297 for ISO A4
            break
            ;;
        "FRTLOCAL_SFM")
            echo "   Izbral si Urejanje FRTlocal.sfm datotek."
            format=FRTLOCAL_SFM
            find SloKJV/ -type f -name "FRTlocal.sfm" -exec pico {} \;
            break
            ;;
        "PTXPRINT_STY")
            echo "   Izbral si Urejanje ptxprint.sty datotek."
            format=PTXPRINT_STY
            find SloKJV/ -type f -name "ptxprint.sty" -exec pico {} \;
            break
            ;;
        "Izhod")
            echo "   Izbral si $REPLY kar je $opt"
            exit
            ;;
        *) echo "Napacna izbira $REPLY";;
    esac
done
#===================================================


#============== Kreira mapo z izbrano velikostjo PDF datoteke. ========================
      case $format in
           "FRTLOCAL_SFM")
               echo "   Preskoci kreiranje mape."
               ;;
           "PTXPRINT_STY")
               echo "   Preskoci kreiranje mape."
               ;;
           *)  echo "   Kreira mapo."
               mkdir $SloKJV_Github/PTXprint/osis2usfm/SloKJV/release/SloKJV_$format  2>/dev/null
               ;;
      esac
#=============================================================================================


# Naredi simbolicen link iz Github na mapo osis2usfm (samo prvic)
ln -s $SloKJV_Github/PTXprint/osis2usfm/run_osis2usfm $osis2usfm       2>/dev/null
ln -s $SloKJV_Github/PTXprint/osis2usfm/osis2usfm.py $osis2usfm        2>/dev/null
ln -s $SloKJV_Github/PTXprint/osis2usfm/SloKJV/ $osis2usfm             2>/dev/null

#================ PTXPrint nadgradi na zadnjo verzijo? ====================
echo " "
echo "   Ali se PTXPrint nadgradi na zadnjo verzijo?"
echo " "
PS4='   Izberi: '
options_ver=("Ne" "Nadgradi" "Izhod")
 select opt_ver in "${options_ver[@]}"
 do
     case $opt_ver in
         "Ne")
             echo " "
             echo "   Pa drugic nadgradnja PTXprint...."
             echo " "
             break
             ;;
         "Nadgradi")
             echo " "
             echo "   Izbral si nadgraditev."
             echo " "
             echo "     Ubuntu package ptxprint update ..."
             echo " "
                 sudo add-apt-repository ppa:silnrsi/ptxprint
                 sudo apt update
                 sudo apt install python3-ptxprint
             break
             ;;
         "Izhod")
             echo " "
             echo "Izbral si $REPLY kar je $opt_ver"
             echo " "
             exit
             ;;
         *) echo "Napacna izbira $REPLY";;
     esac
 done
#==========================================================================


# Potegne iz Githuba (po zelji izklopi ko ni interneta)
#https_proxy=http://proxy.gov.si:80/
#wget --no-proxy https://github.com/msavli/SloKJV/raw/master/SloKJV_sword.xml -O /home/pc/Dokumenti/osis2usfm/SloKJV_sword.xml


#============ Pozene GITHUB Desktop? ========================
echo " "
echo "   Pozene GITHUB Desktop?"
echo " "
PS5='   Izberi: '
options_ver_Git=("Ne" "Pozene" "Izhod")
select opt_ver_Git in "${options_ver_Git[@]}"
 do
      case $opt_ver_Git in
          "Ne")
              echo -e " "
              echo -e "   Pa drugic sinhronizacija z Githubom."
              echo -e " "
              break
             ;;
          "Pozene")
              echo " "
              echo "   Izbral si nadgraditev."
              echo " "
              echo "     Sinhronizacija z Githubom ..."
              echo " "
                #================================================================================
                echo -E "  Ocisti mapo $format zacasnih datotek..."
                #  SloKJV_Github=/home/pc/Dokumenti/GitHub/SloKJV
                find $SloKJV_Github/PTXprint/osis2usfm/SloKJV/release/SloKJV_$format -name '*.usfm'     -exec rm {} \;        >/dev/null 2>&1
                find $SloKJV_Github/PTXprint/osis2usfm/SloKJV/release/SloKJV_$format -name '*.usfm.adj' -exec rm {} \;        >/dev/null 2>&1
                find $SloKJV_Github/PTXprint/osis2usfm/SloKJV/release/SloKJV_$format -name 'local'      -exec rm -rf {} \;    >/dev/null 2>&1
                #================================================================================
              /usr/bin/github-desktop
              break
              ;;
          "Izhod")
              echo " "
              echo "   Izbral si $REPLY kar je $opt_ver"
              echo " "
              exit
             ;;
          *) echo "Napacna izbira $REPLY";;
     esac
 done
#==========================================================================


cd $osis2usfm

# Potegne iz lokanega Githuba (hitreje)
cp /home/pc/Dokumenti/GitHub/SloKJV/SloKJV_sword.xml  /home/pc/Dokumenti/osis2usfm/SloKJV_sword.xml


# =============== Potegne gor vrstice k stevilki verza ====================
sed -i ':a;N;$!ba;s/\">\n/\"> /g'                     /home/pc/Dokumenti/osis2usfm/SloKJV_sword.xml
sed -i ':a;N;$!ba;s/\"\/>\n/\"\/> /g'                 /home/pc/Dokumenti/osis2usfm/SloKJV_sword.xml
#         Sedaj lepo izgleda koda...
#
#         Še Psalme potegne naslove gor
#                <title type="chapter">Psalm 3</title>
#           <title type="psalm" canonical="true">
sed -i ':a;N;$!ba;s/<title type=\"chapter\">Psalm \([0-9]*\)<\/title>\n              <title type=\"psalm\" canonical=\"true\">/<title type=\"chapter\">Psalm \1<\/title><title type=\"psalm\" canonical=\"true\">/g'                 /home/pc/Dokumenti/osis2usfm/SloKJV_sword.xml
cat /home/pc/Dokumenti/osis2usfm/SloKJV_sword.xml |grep "<title><title type="
# =========================================================================


# ================ Uredi odstavke =============
echo -E "   --==    Uredi odstavke                                                "
echo -E "   --==    <milestone type=\"x-p\" marker=\"¶ \"/>                       "
echo -E "   --==    <milestone type=\"x-p\" subType=\"x-added\" marker=\"¶\"/>    "
echo -E "   --==    \p                                                            "
sed -i "s|<milestone type=\"x-p\" marker=\"¶ \"/>| \x5cp |g"                      /home/pc/Dokumenti/osis2usfm/SloKJV_sword.xml
sed -i "s|<milestone type=\"x-p\" subType=\"x-added\" marker=\"¶\"/>| \x5cp |g"   /home/pc/Dokumenti/osis2usfm/SloKJV_sword.xml
cat /home/pc/Dokumenti/osis2usfm/SloKJV_sword.xml |grep "milestone"
# =============================================


# ============= Note da vsakega v svojo vrstico ================
sed -i "s|<note|\n<note|g"                      /home/pc/Dokumenti/osis2usfm/SloKJV_sword.xml

# Ko je <note type="study">             naredi iz   </note>   ->    </noteStudy>
sed -i 's|<note type=\"study\">\(.*\)<\/note>|<note type=\"study\">\1<\/noteStudy>|g'      /home/pc/Dokumenti/osis2usfm/SloKJV_sword.xml
#
# Ko je <note type="crossReference">    naredi iz   </note>   ->    </noteCrossReference>
sed -i 's|<note type=\"crossReference\">\(.*\)<\/note>|<note type=\"crossReference\">\1<\/noteCrossReference>|g'      /home/pc/Dokumenti/osis2usfm/SloKJV_sword.xml
#
# Sedaj pa vrstice potegnem nazaj gor
sed -i ':a;N;$!ba;s/\n<note/<note/g'                     /home/pc/Dokumenti/osis2usfm/SloKJV_sword.xml
#
# Problematičen ker ima v sebi  3 x </note> Eden od reference, dva pa od study opombe...
#cat /home/pc/Dokumenti/osis2usfm/SloKJV_sword.xml | grep '<verse osisID="Gen.1.29">'
# ==============================================================


# ============= STUDIJSKE OPOMBE ===============================================================
echo -E "   --==    Spremeni študijske opombe"
#   V opombo je treba dati vrstico v kateri se nahaja
#   Veckrat ponovi max je bilo 9x v Kroniski knjigi. Dodal se 2x za vsak slucaj.
#   <verse osisID="Gen.1.1">    ->  <note type="study">[text.]</note>       ->   \ef + \fr 1.1: \ft [text]\ef*
sed -i 's|<verse osisID=\"\([A-Za-z0-9]*\).\([0-9]*\).\([0-9]*\)\">\(.*\)<note type=\"study\">\[\(.*\)\]<\/noteStudy>|<verse osisID=\"\1.\2.\3\">\4 \\ef + \\fr \2.\3: \\ft [\5]\\ef*|g'      /home/pc/Dokumenti/osis2usfm/SloKJV_sword.xml
sed -i 's|<verse osisID=\"\([A-Za-z0-9]*\).\([0-9]*\).\([0-9]*\)\">\(.*\)<note type=\"study\">\[\(.*\)\]<\/noteStudy>|<verse osisID=\"\1.\2.\3\">\4 \\ef + \\fr \2.\3: \\ft [\5]\\ef*|g'      /home/pc/Dokumenti/osis2usfm/SloKJV_sword.xml
sed -i 's|<verse osisID=\"\([A-Za-z0-9]*\).\([0-9]*\).\([0-9]*\)\">\(.*\)<note type=\"study\">\[\(.*\)\]<\/noteStudy>|<verse osisID=\"\1.\2.\3\">\4 \\ef + \\fr \2.\3: \\ft [\5]\\ef*|g'      /home/pc/Dokumenti/osis2usfm/SloKJV_sword.xml
sed -i 's|<verse osisID=\"\([A-Za-z0-9]*\).\([0-9]*\).\([0-9]*\)\">\(.*\)<note type=\"study\">\[\(.*\)\]<\/noteStudy>|<verse osisID=\"\1.\2.\3\">\4 \\ef + \\fr \2.\3: \\ft [\5]\\ef*|g'      /home/pc/Dokumenti/osis2usfm/SloKJV_sword.xml
sed -i 's|<verse osisID=\"\([A-Za-z0-9]*\).\([0-9]*\).\([0-9]*\)\">\(.*\)<note type=\"study\">\[\(.*\)\]<\/noteStudy>|<verse osisID=\"\1.\2.\3\">\4 \\ef + \\fr \2.\3: \\ft [\5]\\ef*|g'      /home/pc/Dokumenti/osis2usfm/SloKJV_sword.xml
sed -i 's|<verse osisID=\"\([A-Za-z0-9]*\).\([0-9]*\).\([0-9]*\)\">\(.*\)<note type=\"study\">\[\(.*\)\]<\/noteStudy>|<verse osisID=\"\1.\2.\3\">\4 \\ef + \\fr \2.\3: \\ft [\5]\\ef*|g'      /home/pc/Dokumenti/osis2usfm/SloKJV_sword.xml
sed -i 's|<verse osisID=\"\([A-Za-z0-9]*\).\([0-9]*\).\([0-9]*\)\">\(.*\)<note type=\"study\">\[\(.*\)\]<\/noteStudy>|<verse osisID=\"\1.\2.\3\">\4 \\ef + \\fr \2.\3: \\ft [\5]\\ef*|g'      /home/pc/Dokumenti/osis2usfm/SloKJV_sword.xml
sed -i 's|<verse osisID=\"\([A-Za-z0-9]*\).\([0-9]*\).\([0-9]*\)\">\(.*\)<note type=\"study\">\[\(.*\)\]<\/noteStudy>|<verse osisID=\"\1.\2.\3\">\4 \\ef + \\fr \2.\3: \\ft [\5]\\ef*|g'      /home/pc/Dokumenti/osis2usfm/SloKJV_sword.xml
sed -i 's|<verse osisID=\"\([A-Za-z0-9]*\).\([0-9]*\).\([0-9]*\)\">\(.*\)<note type=\"study\">\[\(.*\)\]<\/noteStudy>|<verse osisID=\"\1.\2.\3\">\4 \\ef + \\fr \2.\3: \\ft [\5]\\ef*|g'      /home/pc/Dokumenti/osis2usfm/SloKJV_sword.xml
sed -i 's|<verse osisID=\"\([A-Za-z0-9]*\).\([0-9]*\).\([0-9]*\)\">\(.*\)<note type=\"study\">\[\(.*\)\]<\/noteStudy>|<verse osisID=\"\1.\2.\3\">\4 \\ef + \\fr \2.\3: \\ft [\5]\\ef*|g'      /home/pc/Dokumenti/osis2usfm/SloKJV_sword.xml
sed -i 's|<verse osisID=\"\([A-Za-z0-9]*\).\([0-9]*\).\([0-9]*\)\">\(.*\)<note type=\"study\">\[\(.*\)\]<\/noteStudy>|<verse osisID=\"\1.\2.\3\">\4 \\ef + \\fr \2.\3: \\ft [\5]\\ef*|g'      /home/pc/Dokumenti/osis2usfm/SloKJV_sword.xml
#
#
# Še v Psalmih naslove psalmov ostevilci z .0
#  Najprej popravlja   \ef
#  <title type="psalm" canonical="true"> Vodji<note type="study">Vodji…: ali, Nadzorniku.</note>
#  <note type="study">    ...   </note>
#  <title type="chapter">Psalm 32</title>
sed -i 's|<title type=\"chapter\">Psalm \([0-9]*\)<\/title>\(.*\)<note type=\"study\">\[\(.*\)\]<\/noteStudy>|<title type=\"chapter\">Psalm \1<\/title>\2 \\ef + \\fr \1.0: \\ft [\3]\\ef*|g'      /home/pc/Dokumenti/osis2usfm/SloKJV_sword.xml
sed -i 's|<title type=\"chapter\">Psalm \([0-9]*\)<\/title>\(.*\)<note type=\"study\">\[\(.*\)\]<\/noteStudy>|<title type=\"chapter\">Psalm \1<\/title>\2 \\ef + \\fr \1.0: \\ft [\3]\\ef*|g'      /home/pc/Dokumenti/osis2usfm/SloKJV_sword.xml
sed -i 's|<title type=\"chapter\">Psalm \([0-9]*\)<\/title>\(.*\)<note type=\"study\">\[\(.*\)\]<\/noteStudy>|<title type=\"chapter\">Psalm \1<\/title>\2 \\ef + \\fr \1.0: \\ft [\3]\\ef*|g'      /home/pc/Dokumenti/osis2usfm/SloKJV_sword.xml
#
#  Potem popravlja     \f
#                     \f + \fr 1.0: \fk svetlobo…: \ft hebr. med temo in med svetlobo.\f*
sed -i 's|<title type=\"chapter\">Psalm \([0-9]*\)<\/title>\(.*\)<note type=\"study\">\(.*\)<\/noteStudy>|<title type=\"chapter\">Psalm \1<\/title>\2 \\f + \\fr \1.0: \\ft \3\\f*|g'      /home/pc/Dokumenti/osis2usfm/SloKJV_sword.xml
sed -i 's|<title type=\"chapter\">Psalm \([0-9]*\)<\/title>\(.*\)<note type=\"study\">\(.*\)<\/noteStudy>|<title type=\"chapter\">Psalm \1<\/title>\2 \\f + \\fr \1.0: \\ft \3\\f*|g'      /home/pc/Dokumenti/osis2usfm/SloKJV_sword.xml
sed -i 's|<title type=\"chapter\">Psalm \([0-9]*\)<\/title>\(.*\)<note type=\"study\">\(.*\)<\/noteStudy>|<title type=\"chapter\">Psalm \1<\/title>\2 \\f + \\fr \1.0: \\ft \3\\f*|g'      /home/pc/Dokumenti/osis2usfm/SloKJV_sword.xml
# cat /home/pc/Dokumenti/osis2usfm/SloKJV_sword.xml |grep -e '<note type=\"study\">' |grep -e "Psalm"
#
#
#   V reference je treba dati vrstico v kateri se nahaja
#   Veckrat ponovi max je bilo 9x v Kroniski knjigi. Dodal se 2x za vsak slucaj.
#   <verse osisID="Gen.1.1">    ->  <note type="study">[text.]</note>       ->   \f + \fr 1.1: \fk svetlobo: \ft [text]\ef*
sed -i 's|<verse osisID=\"\([A-Za-z0-9]*\).\([0-9]*\).\([0-9]*\)\">\(.*\)<note type=\"study\">\(.*\): \(.*\)<\/noteStudy>|<verse osisID=\"\1.\2.\3\">\4 \\f + \\fr \2.\3: \\fk \5: \\ft \6\\ef*|g'      /home/pc/Dokumenti/osis2usfm/SloKJV_sword.xml
sed -i 's|<verse osisID=\"\([A-Za-z0-9]*\).\([0-9]*\).\([0-9]*\)\">\(.*\)<note type=\"study\">\(.*\): \(.*\)<\/noteStudy>|<verse osisID=\"\1.\2.\3\">\4 \\f + \\fr \2.\3: \\fk \5: \\ft \6\\ef*|g'      /home/pc/Dokumenti/osis2usfm/SloKJV_sword.xml
sed -i 's|<verse osisID=\"\([A-Za-z0-9]*\).\([0-9]*\).\([0-9]*\)\">\(.*\)<note type=\"study\">\(.*\): \(.*\)<\/noteStudy>|<verse osisID=\"\1.\2.\3\">\4 \\f + \\fr \2.\3: \\fk \5: \\ft \6\\ef*|g'      /home/pc/Dokumenti/osis2usfm/SloKJV_sword.xml
sed -i 's|<verse osisID=\"\([A-Za-z0-9]*\).\([0-9]*\).\([0-9]*\)\">\(.*\)<note type=\"study\">\(.*\): \(.*\)<\/noteStudy>|<verse osisID=\"\1.\2.\3\">\4 \\f + \\fr \2.\3: \\fk \5: \\ft \6\\ef*|g'      /home/pc/Dokumenti/osis2usfm/SloKJV_sword.xml
sed -i 's|<verse osisID=\"\([A-Za-z0-9]*\).\([0-9]*\).\([0-9]*\)\">\(.*\)<note type=\"study\">\(.*\): \(.*\)<\/noteStudy>|<verse osisID=\"\1.\2.\3\">\4 \\f + \\fr \2.\3: \\fk \5: \\ft \6\\ef*|g'      /home/pc/Dokumenti/osis2usfm/SloKJV_sword.xml
#
#
#   V 1Tim.c je še ena opomba
#   <div type="colophon" osisID="1Tim.c"> [Prvo Timóteju je bilo napisano iz Laodikeje, ki je glavno mesto Frigije<note type="study">[Frigija: zahodni del izmed dveh frigijskih provinc.]</note> Pacatiane.]
#   Kar fixn popravin na zadnjo vrstico v 1Tim.6.21
sed -i 's|<note type=\"study\">\[\(.*\)\]<\/noteStudy>| \\ef + \\fr 6.21: \\ft [\1]\\ef*|g'      /home/pc/Dokumenti/osis2usfm/SloKJV_sword.xml
# ========================================================================================


# ============= TEST ==========
echo -E "   --==    Testiram število preostalih študijskih opomb"
#cat ../GitHub/SloKJV/SloKJV_sword.xml | grep "štiriintrideset let ter zaplodil Pelega"
#cat /home/pc/Dokumenti/osis2usfm/SloKJV_sword.xml | grep 'Gen.11.16'
echo -e "   --==    Število <note type=\"study\">"
cat /home/pc/Dokumenti/osis2usfm/SloKJV_sword.xml | grep '<note type="study"' |wc -l
echo -e "   --==    Število </noteStudy>"
cat /home/pc/Dokumenti/osis2usfm/SloKJV_sword.xml | grep '<\/noteStudy>' |wc -l
# ============================


# ============= REFERENCE ===============================================================
echo -E "   --==    Spremeni reference"
# Najprej jih polovimo tam, kjer jih je v enem <note> vec
#    Veckrat ponovi max je bilo 9x v Ps 62,12. Dodal se 3x za vsak slucaj.
#    <reference osisRef="Ps.33.6">Ps 33,6</reference>                    ->   \x - \xo 1.1: \xt Ps 33,6\x*
#    <reference osisRef="1Chr.1.1-1Chr.1.54">1 Krn 1,1-54</reference>    ->   \x - \xo 1.1: \xt 1 Krn 1,1-54\x*
#                                                                          <reference osisRef="Prov.24.12">          Prg 24,12          </reference>
#
#    Žalostinke imajo Ž    U+017D	Ž	c5 bd    \xc5\xbd
#    Ker ne znam drugace bom   Ž   spremenil v  QZQ
