      cat A7_INT.usfm
      # ========================================================================


      #============== Da ni v SLO-KJV med zemljevidi praznih strani ========================
      case $format in
           "SLO-KJV")


               echo -E "   --==    Pobrise \pb da ni med zemljevidi praznih strani"
               sed -i "s|\\\\pb||g"             A1_BAK.usfm
               ;;
